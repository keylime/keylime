     - /functional/tpm_policy-sanity-on-localhost
     - /functional/db-postgresql-sanity-on-localhost
     - /functional/db-mariadb-sanity-on-localhost
     - /functional/db-mysql-sanity-on-localhost

execute:
    how: tmt
